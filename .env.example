# Oto Parça Panel - Local Development Environment
# Bu dosyayı .env olarak kopyalayın ve değerleri doldurun

# Database Configuration
DATABASE_URL=postgresql://oto_user:password123@localhost:5432/oto_parca_panel
POSTGRES_USER=oto_user
POSTGRES_PASSWORD=password123
POSTGRES_DB=oto_parca_panel

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# NextAuth Configuration
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Redis Configuration (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# WooCommerce Integration (Optional)
WOOCOMMERCE_URL=
WOOCOMMERCE_CONSUMER_KEY=
WOOCOMMERCE_CONSUMER_SECRET=

# Development Settings
NODE_ENV=development
PORT=3001