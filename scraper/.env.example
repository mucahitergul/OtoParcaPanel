# Oto Parça Panel - Python Scraper Environment Variables
# Remote scraper konfigürasyonu

# =============================================================================
# REMOTE SUNUCU AYARLARI
# =============================================================================

# Remote sunucu URL'leri
REMOTE_SERVER_URL=https://yourdomain.com
REMOTE_API_URL=https://yourdomain.com/api
REMOTE_SCRAPER_ENDPOINT=https://yourdomain.com/api/scraper

# Authentication (gerekirse)
# API_KEY=your_api_key_here
# JWT_TOKEN=your_jwt_token_here

# =============================================================================
# FLASK SERVER AYARLARI
# =============================================================================

# Flask server konfigürasyonu
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_ENV=development
FLASK_DEBUG=True

# CORS ayarları
CORS_ORIGINS=*
CORS_METHODS=GET,POST,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# =============================================================================
# SCRAPER AYARLARI
# =============================================================================

# Scraping konfigürasyonu
SCRAPER_TIMEOUT=30
SCRAPER_RETRY_COUNT=3
SCRAPER_DELAY=2
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# =============================================================================
# TEDARIKÇI AYARLARI
# =============================================================================

# Dinamik Tedarikçi
DINAMIK_BASE_URL=https://dinamik.com.tr
DINAMIK_LOGIN_URL=https://dinamik.com.tr/login
DINAMIK_USERNAME=your_username
DINAMIK_PASSWORD=your_password

# Başbuğ Tedarikçi
BASBUG_BASE_URL=https://basbug.com.tr
BASBUG_LOGIN_URL=https://basbug.com.tr/login
BASBUG_USERNAME=your_username
BASBUG_PASSWORD=your_password

# Doğuş Tedarikçi
DOGUS_BASE_URL=https://dogus.com.tr
DOGUS_LOGIN_URL=https://dogus.com.tr/login
DOGUS_USERNAME=your_username
DOGUS_PASSWORD=your_password

# =============================================================================
# LOG AYARLARI
# =============================================================================

# Logging konfigürasyonu
LOG_LEVEL=INFO
LOG_FILE=scraper.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Console logging
LOG_TO_CONSOLE=True
LOG_TO_FILE=True

# =============================================================================
# CACHE AYARLARI
# =============================================================================

# Cache konfigürasyonu
CACHE_ENABLED=True
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Redis cache (opsiyonel)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=

# =============================================================================
# MONITORING AYARLARI
# =============================================================================

# Health check
HEALTH_CHECK_ENABLED=True
HEALTH_CHECK_INTERVAL=60

# Metrics
METRICS_ENABLED=True
METRICS_PORT=9090

# Alerting (opsiyonel)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
# EMAIL_SMTP_HOST=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_USERNAME=your_email@gmail.com
# EMAIL_PASSWORD=your_app_password
# ALERT_EMAIL=admin@yourdomain.com

# =============================================================================
# DEVELOPMENT AYARLARI
# =============================================================================

# Development mode
DEV_MODE=True
DEBUG_MODE=True
MOCK_DATA=True

# Test ayarları
TEST_MODE=False
TEST_DELAY=1
TEST_SUPPLIERS=Dinamik,Başbuğ

# =============================================================================
# SECURITY AYARLARI
# =============================================================================

# SSL/TLS
SSL_VERIFY=True
SSL_CERT_PATH=
SSL_KEY_PATH=

# Request security
MAX_REQUEST_SIZE=1048576
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# API Security
API_RATE_LIMIT=100
API_RATE_WINDOW=3600
API_MAX_CONNECTIONS=10